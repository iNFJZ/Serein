@model Serein.Pages.Partials._FeedbackModel
<div class="container" id="feedback-section">
    <div class="row">
        <div class="col-12">
            <div class="section_title">
                <h2>Feedback</h2>
            </div>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="Men" role="tabpanel">
            <div class="row">
                <div class="product_carousel product_column4 owl-carousel">
                    @if (Model?.Reviews != null && Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="col-lg-3">
                                <article class="single_product">
                                    <figure>
                                        <div class="product_thumb">
                                            <a href="#" class="primary_img">
                                                <img src="@review.User?.AvatarUrl" alt="">
                                            </a>
                                        </div>
                                        <div class="testimonial_content">
                                            <h4><a href="#">@review.User?.FullName</a></h4>
                                            <p>@review.Comment</p>
                                        </div>
                                    </figure>
                                </article>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
